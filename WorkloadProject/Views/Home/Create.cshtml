@model WorkloadProject.Models.Lesson
@{
    ViewBag.Title = "Добавление смартфона";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Subject.Name" class="control-label">Название предмета</label>
        <input type="text" asp-for="Subject.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TypeLesson.Name" class="control-label">Тип занятия</label>
        <input type="text" asp-for="TypeLesson.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Teacher.Surname" class="control-label">Фамилия преподавателя</label>
        <input type="text" asp-for="Teacher.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>